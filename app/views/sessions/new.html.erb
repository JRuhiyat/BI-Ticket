<div class="login-container">
  <div class="login-box">
    <h1 class="login-title">BI Ticket System</h1>
    <h2 class="login-subtitle">Login</h2>
    
    <%= form_with url: login_path, local: true, class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-input", required: true, autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-input", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.submit "Login", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    
    <div class="login-info">
      <p><strong>Test Credentials:</strong></p>
      <p>Email: admin@example.com</p>
      <p>Password: password123</p>
    </div>
  </div>
</div>
